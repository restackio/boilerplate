{
  "name": "boilerplate-app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "localsetup": "pnpm install && pnpm infra:start && sleep 10 && pnpm db:migrate && pnpm db:demo:insert",
    "localdev": "pnpm infra:start && sleep 5 && pnpm dev",
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "vale": "vale README.md CONTRIBUTING.md apps/*/README.md packages/*/README.md",
    "clean": "rm -rf node_modules && rm -rf apps/*/node_modules && rm -rf packages/*/node_modules",
    "infra:start": "docker-compose -f docker-compose.dev.yml up -d",
    "infra:stop": "docker-compose -f docker-compose.dev.yml down",
    "infra:restart": "docker-compose -f docker-compose.dev.yml restart",
    "infra:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "infra:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d",
    "infra:ps": "docker-compose -f docker-compose.dev.yml ps",
    "db:migrate": "turbo migrate --filter=@boilerplate/database",
    "db:demo:insert": "turbo demo:insert --filter=@boilerplate/database",
    "db:demo:reset": "turbo demo:reset --filter=@boilerplate/database",
    "postgres:connect": "docker-compose -f docker-compose.dev.yml exec postgres psql -U postgres -d boilerplate_postgres",
    "clickhouse:connect": "docker-compose -f docker-compose.dev.yml exec clickhouse clickhouse-client",
    "prod:up": "docker-compose up -d --build",
    "prod:down": "docker-compose down",
    "prod:logs": "docker-compose logs -f",
    "prod:restart": "docker-compose restart backend mcp_server webhook",
    "prod:reset": "docker-compose down -v && docker-compose up -d --build"
  },
  "dependencies": {
    "@restackio/ai": "^0.0.149"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.3",
    "turbo": "^2.5.6",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=20"
  }
}
